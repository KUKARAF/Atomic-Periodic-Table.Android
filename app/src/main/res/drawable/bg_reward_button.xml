<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- subtle vertical gradient using theme primary color and a lighter variant -->
    <gradient
        android:angle="90"
        android:startColor="?attr/colorTertiary"
        android:endColor="?attr/colorTertiary" />
    <!-- soft rounded corners to match card-like UI -->
    <corners android:radius="12dp" />
    <!-- thin semi-transparent stroke for separation -->
    <stroke
        android:width="1dp"
        android:color="@color/reward_button_stroke" />
    <!-- small internal padding so text doesn't sit on edges when used as background -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>