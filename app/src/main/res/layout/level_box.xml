<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_box_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/toast_card"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="@dimen/default_padding">

    <!-- Title / header -->
    <TextView
        android:id="@+id/level_box_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level X-Y"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="?attr/colorAccent"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:layout_marginTop="@dimen/default_padding"
        android:layout_marginBottom="@dimen/margin_space_card" />

    <!-- Container for category rows -->
    <LinearLayout
        android:id="@+id/level_categories_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- Rewards area at the bottom of each box (initially GONE) -->
    <LinearLayout
        android:id="@+id/level_rewards_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Example reward view: you can replace or populate programmatically -->
        <TextView
            android:id="@+id/level_rewards_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rewards_available"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="?attr/colorOnSurface" />

        <LinearLayout
            android:id="@+id/level_rewards_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>