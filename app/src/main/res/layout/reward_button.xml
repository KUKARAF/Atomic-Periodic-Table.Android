<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reward_button_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_reward_button"
    android:foreground="@drawable/ripple_reward_button"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:minHeight="36dp"
    android:clickable="true"
    android:focusable="true">

    <!-- optional leading icon (check) that is hidden by default -->
    <ImageView
        android:id="@+id/reward_check_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:tint="?attr/colorOnPrimary"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/reward_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reward_5pct_title"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>