<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/abundance_properties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        android:orientation="vertical">

        <!-- Container with center icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Container with center icon -->
            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/cookie_7"
                android:backgroundTint="?attr/colorAccent"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center">

                <ImageView
                    android:id="@+id/overview_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_earth"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:tint="?attr/colorOnPrimary" />
            </FrameLayout>

            <TextView
                android:id="@+id/overview_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/abundance_title"
                android:textColor="?attr/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/toast_element_list_top"
        android:backgroundTint="?attr/colorPrimaryDark">

        <TextView
            android:id="@+id/abundance_earth_crust_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abundance_earth_crust"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abundance_earth_crust_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abundance_earth_crust_text"
            android:textIsSelectable="true"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/toast_element_list"
        android:backgroundTint="?attr/colorPrimaryDark">

        <TextView
            android:id="@+id/abundance_earth_soil_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abundance_earth_soils"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abundance_earth_soil_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abundance_earth_soil_text"
            android:textIsSelectable="true"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/toast_element_list"
        android:backgroundTint="?attr/colorPrimaryDark">

        <TextView
            android:id="@+id/abundance_urban_soil_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abundance_urban_soil"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abundance_urban_soil_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abundance_urban_soil_text"
            android:textIsSelectable="true"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/toast_element_list"
        android:backgroundTint="?attr/colorPrimaryDark">

        <TextView
            android:id="@+id/abundance_crustal_rocks_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abundance_crustal_rocks"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abundance_crustal_rocks_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abundance_crustal_rocks_text"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/toast_element_list"
        android:backgroundTint="?attr/colorPrimaryDark">

        <TextView
            android:id="@+id/abundance_sea_water_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abundance_sea_water"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abundance_sea_water_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abundance_sea_water_text"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/toast_element_list"
        android:backgroundTint="?attr/colorPrimaryDark">

        <TextView
            android:id="@+id/abundance_sun_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abundance_sun"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abundance_sun_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abundance_sun_text"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/toast_element_list_bottom"
        android:backgroundTint="?attr/colorPrimaryDark">

        <TextView
            android:id="@+id/abundance_solar_system_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abundance_solar_system"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abundance_solar_system_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abundance_solar_system_text"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>
    </LinearLayout>
</FrameLayout>