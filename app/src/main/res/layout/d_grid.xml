<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/grid_properties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        android:elevation="2dp"
        android:orientation="vertical">

        <!-- Container with center icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Container with center icon -->
            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/cookie_7"
                android:backgroundTint="?attr/colorAccent"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center">

                <ImageView
                    android:id="@+id/overview_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_grid"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:tint="?attr/colorOnPrimary" />
            </FrameLayout>

            <TextView
                android:id="@+id/overview_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/grid_title"
                android:textColor="?attr/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/toast_element_list_top"
                    android:backgroundTint="?attr/colorPrimaryDark">

                <TextView
                    android:id="@+id/crystal_structure_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/crystal_structure"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/crystal_structure_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="crystal_structure_text"
                    android:textIsSelectable="true"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/toast_element_list"
                    android:backgroundTint="?attr/colorPrimaryDark">

                <TextView
                    android:id="@+id/grid_parameters_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/grid_parameters"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/grid_parameters_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="grid_parameters_text"
                    android:textIsSelectable="true"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/toast_element_list"
                    android:backgroundTint="?attr/colorPrimaryDark">

                <TextView
                    android:id="@+id/debye_low_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debye_temperature_low_temperature_limit"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/debye_low_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="debye_low_text"
                    android:textIsSelectable="true"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/toast_element_list_bottom"
                    android:backgroundTint="?attr/colorPrimaryDark">

                <TextView
                    android:id="@+id/debye_room_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debye_temperature_room_temperature"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/debye_room_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debye_temperature_room_temperature"
                    android:textIsSelectable="true"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@drawable/toast_element"
                android:backgroundTint="?attr/colorPrimaryDark">

                <com.jlindemann.science.extensions.CrystalStructureView
                    android:id="@+id/crystal_view"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>